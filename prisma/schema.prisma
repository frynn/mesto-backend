generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  email String @unique
  hash  String

  firstname      String
  secondndockame String
  patronymic     String
  login          String  @unique
  about          String?
  photo          String?
  date           String

  todos Post[]

  @@map("users")
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  title       String
  description String?
  link        String
  picture     String

  userId Int
  user   User @relation(fields: [userId], references: [id])

  @@map("posts")
}
