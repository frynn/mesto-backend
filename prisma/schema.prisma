
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    updateAt DateTime @updatedAt

    email String
    hash String

    firstName String
    secondName String?
}

model ToDo {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    updateAt DateTime @updatedAt

    tittle String
    description String?
    link String
}
